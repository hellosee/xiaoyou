
.section-header {
    width: 100%;
    height: 280rpx;
    padding-top: 40rpx;
    text-align: center;
}
.section-portrait-wrapper {
    width: 180rpx;
    height: 180rpx;
    margin-right: auto;
    margin-left: auto;
    overflow: hidden;
    border-radius: 50%;
}
.section-header-portrait {
    width: 100%;
    height: 100%;
}
.hidden-class {
    display: none;
}
.section-header-text {
    margin-top: 10rpx;
    font-size: 24rpx;
    color: #9ea1a4;
}
.ul {
    margin: 0;
    padding: 0;
}
.li {
    width: 100%;
    background: #fff;
    border-bottom: 2rpx solid #e4e8ec;
    position: relative;
}
.name {
    color: #343536;
    font-size: 32rpx;
    padding: 16rpx 16rpx;
    border: 0;
    font-family: Helvetica;
    word-wrap: break-word;
    word-break: break-all;
}
.name .small {
    font-size: 24rpx;
    color: #9ea1a4!important;
    margin-left: 10rpx;
}
.red {
    color: red;
}
.ul input {
    font-size: 32rpx;
    padding: 4rpx 30rpx 41rpx 30rpx;
    width: 100%;
    height:80rpx;
    box-sizing: border-box;
    outline: none;
    border: none;
}

.footer {
    height: 120rpx;
    width: 100%;
    border-top: 2rpx solid #e4e8ec;
    position: fixed;
    bottom: 0;
    background: #fff;
    max-width: 100%;
}
.submit_btn {
    width: 590rpx;
    height: 86rpx;
    line-height: 86rpx;
    font-size: 32rpx;
    text-align: center;
    background: #ffb43f;
    border-radius: 10rpx;
    color: #fff;
    margin: auto;
    margin-top: 16rpx;
}
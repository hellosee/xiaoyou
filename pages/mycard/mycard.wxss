.footer {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 40px;
    padding-top: 5px;
    padding-bottom: 5px;
    background-color: #fff;
}
.footer-nav {
    height: 100%;
}
.nav-wrapper {
    display: box;
    display: -webkit-box;
    display: flex;
    display: -webkit-flex;
    box-orient: horizontal;
    -webkit-box-orient: horizontal;
    flex-direction: row;
    -webkit-flex-direction: row;
    height: 100%;
}
.nav-list {
    position: relative;
    line-height: 1;
    text-align: center;
    border: none;
    box-flex: 1;
    -webkit-box-flex: 1;
    flex: 1;
    -webkit-flex: 1;
}
.nav-content {
    display: inline-block;
    margin-top: 11px;
    padding: 3px 0 3px 25px;
    font-size: 15px;
    color: #555;
}
.nav-message {
    background: url(https://fonehui.com/static/img/wximg/webapp2.0/reply_click.png) left center no-repeat;
    background-size: 20px;
}
.nav-contacts {
    background: url(https://fonehui.com/static/img/wximg/webapp2.0/img_update/icon_haoyou@2x.png) left center no-repeat;
